@page
@model AS_ASSN2_Rachel.Pages.ResetPasswordModel
@{
}
<h2>Reset Password</h2>

@if (Model.Message != null) {
    <div class="alert alert-info">@Model.Message</div>
}

<form method="post">
    <input type="hidden" asp-for="Input.Token" />
    <input type="hidden" asp-for="Input.Email" />

    <div class="form-group">
        <label>New Password</label>
        <input asp-for="Input.NewPassword" class="form-control" required />
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Confirm Password</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" required />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Reset Password</button>
</form>
