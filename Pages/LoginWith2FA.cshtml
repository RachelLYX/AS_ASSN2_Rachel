@page
@model AS_ASSN2_Rachel.Pages.LoginWith2FAModel
@{
    ViewData["Title"] = "Login with Two-Factor Authentication";
}

<div class="container mt-5">
    <h1 class="text-center">Two-Factor Authentication</h1>
    <p class="text-center">Enter the code from your authenticator app to proceed.</p>

    <form method="post">
        <div class="mb-3">
            <label asp-for="Input.TwoFactorCode" class="form-label"></label>
            <input asp-for="Input.TwoFactorCode" class="form-control" placeholder="6-digit code" />
            <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="Input.RememberMe" class="form-check-input" />
            <label asp-for="Input.RememberMe" class="form-check-label">Remember me on this device</label>
        </div>

        <button type="submit" class="btn btn-primary w-100">Verify</button>
    </form>

    <div class="mt-3 text-center">
        <a asp-page="/Login" class="text-decoration-none">Go back to login</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
